{% extends "layout.twig" %}
{% block title %} Agregar canción {% endblock %}
{% block main_container %}
    <h2>Agregar autor</h2>
    <form class="form-horizontal" method="post" action="/authors/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="anme">Nombre:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                       />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="group">Grupo:</label>
            <div class="col-sm-10">
                <input type="text" id="group" class="form-control" name="group"
                       placeholder="group" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="rol">Rol:</label>
            <div class="col-sm-10">
                <select class="form-control" id="rol" name="rol" required>
                    <option value="cantante">Cantante</option>
                    <option value="bateria">Batería</option>
                    <option value="guitarrista">Guitarrista</option>
                    <option value="bajista">Bajista</option>
                    <option value="teclista">Teclista</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </form>
{% endblock %}